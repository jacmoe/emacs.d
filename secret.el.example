(defconst my-default-dictionary "en_US")

(defconst my-bookmarks "~/Dropbox/bookmarks")

(defconst my-bloglist
      '(("Blog Title"
         :url "https://myblog.wordpress.com/xmlrpc.php"
         :username "username")))

(defconst my-org-clock-sound "~/.emacs.d/res/siren.wav")

(defconst my-org-directory "~/Dropbox/skriv")

(defconst my-org-capture-notes "~/Dropbox/skriv/notes.org")

(defconst my-org-roam-directory "~/RoamNotes")

(setq my-org-tracktable-daily-goal 1000)

;; choose fonts that you have installed, fixed width is mono spaced
(defvar my-fixed-font-family "DejaVu Sans Mono") 
(setq my-fixed-font-size 130)  ;base font size. Try 150 or 170 if too small
;; Bookman BT, Merriweather, Trebuchet MS, Open Sans, Comic Sans MS, Garamond, Times New Roman, Century Schoolbook
(defvar my-variable-font-family "Arial") 
(setq my-variable-font-size 130)  ;base font size. Try 150 or 170 if too small

;; use boon? If so, use t instead of nil
(setq my-use-boon nil)

(setq my-line-spacing 6)
